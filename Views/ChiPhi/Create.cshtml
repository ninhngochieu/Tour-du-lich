@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thêm chi phí";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm chi phí</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm giá mới</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid card">
            <div class="col-12">
                <form method="post">
                    <div class="row">
                        <div class="col-12" style="padding: 20px;">
                             <div class="row">
                                <div class="col-6" style="padding: 20px;">
                                    <div class="form-group">
                                    <label>Tên tour</label>
                                    <input type="text" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                    <label>Tên đoàn</label>
                                    <input type="text" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                    <label>Loại chi phí</label>
                                    <select class="form-control">
                                        <option value='0' selected='true'>Hướng dẫn viên</option>
                                        <option value='1'>Thông dịch viên</option>
                                        <option value='2'>Tài xế</option>
                                    </select>
                                    </div>
                                </div>
                                <div class="col-6" style="padding: 20px;">
                                    <div class="form-group">
                                    <label>Nội dung</label>
                                    <input type="text" class="form-control" placeholder="Nhập nội dung">
                                    </div>
                                    <div class="form-group">
                                    <label>Hóa đơn</label>
                                    <input type="text" class="form-control" placeholder="Nhập mã hóa đơn">
                                    </div>
                                    <div class="form-group">
                                    <label>Giá</label>
                                    <input type="number" class="form-control" placeholder="Nhập giá">
                                </div>
                                </div>
                                </div>
                        </div>
                        <div class="modal-footer col-12">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>