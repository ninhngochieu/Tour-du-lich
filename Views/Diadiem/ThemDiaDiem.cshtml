@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý địa điểm";
}
@inject tour.Repository.DiaDiem.IDiaDiemRepo _repo;
@model DiaDiems
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm địa điểm mới</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm địa điểm</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid card">
            <div class="col-12">
                <form method="post">
                    <div class="row">
                        <div class="col-6" style="padding: 20px;">
                            <div class="form-group">
                                <label>Tên địa điểm</label>
                                <input asp-for="Ten" type="text" class="form-control" placeholder="Nhập tên địa điểm">
                                <span class="text-danger" asp-validation-for="Ten"></span>
                            </div>
                            <div class="form-group">
                                <label>Tên thành phố</label>
                                <input asp-for="Thanhpho" type="text" class="form-control" placeholder="Nhập tên thành phố">
                                <span class="text-danger" asp-validation-for="Thanhpho"></span>
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea asp-for="Mota" class="form-control"></textarea>
                                <span class="text-danger" asp-validation-for="Mota"></span>
                            </div>
                        </div>
                        <div class="col-6" style="padding: 20px;">
                            <div class="form-group">
                                <label for="exampleInputFile">Nhập hình ảnh</label>
                                <input type="file" id="exampleInputFile" width="200" height="200">
                            </div>
                            <img src="../../pngtree-travel-promotion-background-creative-synthesis-parent-child-tour-couple-tour-image_13277.jpg" alt="..." class="img-thumbnail">
                        </div>
                        <div class="modal-footer col-12">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>