@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý giá";
    var Tours = ViewBag.Tours;
}
@model Gias
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm giá mới</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm giá mới</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid card">
            <div class="col-12">
                <form method="post">
                    <div class="row">
                        <div class="col-12" style="padding: 20px;">
                            <div class="form-group">
                                <label>Tên tour</label>
                                <select class="form-control" asp-for="ToudId" >
                                    @foreach(Tours t in Tours)
                                    {
                                        <option value="@t.LoaiId">@t.Ten</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <input asp-for="Sotien" type="text" class="form-control" placeholder="Nhập giá">
                                <span class="text-danger" asp-validation-for="Sotien"></span>
                            </div>
                            <div class="form-group">
                                <label>Giá từ ngày</label>
                                <input asp-for="Tungay" type="date" class="form-control" placeholder="Nhập tên thành phố">
                                <span class="text-danger" asp-validation-for="Tungay"></span>
                            </div>
                            <div class="form-group">
                                <label>Giá đến ngày</label>
                                <input asp-for="Denngay" type="date" class="form-control">
                                <span class="text-danger" asp-validation-for="Denngay"></span>
                            </div>
                        </div>
                        <div class="modal-footer col-12">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>