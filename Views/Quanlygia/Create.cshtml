@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý đoàn";
}
<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Thêm địa điểm mới</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
              <li class="breadcrumb-item active">Thêm địa điểm</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content">
      <div class="container-fluid card">
        <div class="col-12">
          <div class="row">
            <div class="col-12" style="padding: 20px;">
              <div class="form-group">
                <label>Giá</label>
                <input type="text" class="form-control" placeholder="Nhập giá">
              </div>
              <div class="form-group">
                <label>Giá từ ngày</label>
                <input type="date" class="form-control" placeholder="Nhập tên thành phố">
              </div>
              <div class="form-group">
                <label>Giá đến ngày</label>
                <input type="date" class="form-control">
              </div>
            </div>
            <div class="modal-footer col-12">
              <button type="button" class="btn btn-primary">Lưu</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>