@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý tour";
}
 <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Thêm tour mới</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
              <li class="breadcrumb-item active">Thêm tour</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content">
      <div class="container-fluid card">
        <div class="col-12">
          <div class="row">
            <div class="col-6" style="padding: 20px;">
              <div class="form-group">
                <label>Tên tour</label>
                <input type="text" class="form-control" placeholder="Nhập tên tour">
              </div>
              <div class="form-group">
                <label>Loại</label>
                <select class="form-control">
                  <option>Chọn loại hình du lịch</option>
                  <option>Du lịch di động</option>
                  <option>Du lịch nghề nghiệp</option>
                  <option>Du lịch xã hội</option>
                  <option>Du lịch gia đình</option>
                </select>
              </div>
              <div class="form-group">
                <label>Giá</label>
                <select class="form-control">
                  <option>Chọn giá</option>
                  <option>2.400.000Đ (Từ 1-1-2020 đến 5-5-2020)</option>
                  <option>Du lịch nghề nghiệp</option>
                  <option>Du lịch xã hội</option>
                  <option>Du lịch gia đình</option>
                </select>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" value="2.600.000 VNĐ" readonly>
              </div>
            </div>
            <div class="col-6" style="padding: 20px;">
              <div id="listPlace">
                <div class="form-group">
                  <input type="hidden" id="last-number" value="2">
                  <label for="exampleFormControlSelect1">Địa điểm 1</label>
                  <select class="form-control" id="idAddress-0" class="addressTour">
                    <option>Chọn địa điểm - thành phố</option>
                    <option>Đà Lạt</option>
                    <option>Nha Trang</option>
                    <option>Đà Nẵng</option>
                    <option>Phan Thiết</option>
                    <option>Phú Quốc</option>
                  </select>
                </div>
                <div id="detailPlace0"></div>
                <hr>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Địa điểm 2</label>
                  <select class="form-control" id="idAddress-1" class="addressTour">
                    <option>Chọn địa điểm - thành phố</option>
                    <option>Đà Lạt</option>
                    <option>Nha Trang</option>
                    <option>Đà Nẵng</option>
                    <option>Phan Thiết</option>
                    <option>Phú Quốc</option>
                  </select>
                </div>
                <div id="detailPlace1"></div>
              </div>   
              <hr>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Thêm địa điểm thành phố</label>
                <div class="input-group mb-3">
                 <input type="number" value="1" class="form-control" placeholder="Nhập số lượng" id="soluong">
                 <div class="input-group-append">
                   <button class="btn btn-outline-primary" type="button" id="themdiadiem">Xác nhận</button>
                 </div>
               </div>
              </div>        
            </div>
            <div class="col-12">
              <div class="card card-outline card-info">
                <div class="card-header">
                  <h3 class="card-title">Lịch trình</h3>
                  <!-- tools box -->
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool btn-sm" data-card-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                      <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool btn-sm" data-card-widget="remove" data-toggle="tooltip"
                            title="Remove">
                      <i class="fas fa-times"></i></button>
                  </div>
                  <!-- /. tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body pad">
                  <div class="mb-3">
                    <textarea class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer col-12">
              <button type="button" class="btn btn-primary">Lưu</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>